<apex:page controller="custombilltolookupPageController" title="Search" showHeader="false" sideBar="false" tabStyle="Account" id="pg">
    <script>
        function loadContact(){
            top.window.opener.location.href='/setup/ui/recordtypeselect.jsp?ent=Contact&accid={!caseidnew}&retURL=%2F003%2Fo&save_new_url=%2F003%2Fe%3FretURL%3D%252F003%252Fo';
            window.close();
        } 
    </script> 
    <apex:form >
        <apex:outputPanel id="page" layout="block" style="margin:5px;padding:10px;padding-top:2px;" >
            <apex:tabPanel switchType="client" selectedTab="name1" id="tabbedPanel"> 
                <!-- SEARCH TAB -->
                <apex:tab label="Bill To Address Search" name="tab1" id="tabOne"> 
                    <apex:actionRegion >  
                        <apex:outputPanel id="top" layout="block" style="margin:5px;padding:10px;padding-top:2px;">
                            <apex:outputLabel value="{!$Label.Search}" style="font-weight:Bold;padding-right:10px;" for="txtSearch"/>
                            <apex:inputText id="txtSearch" value="{!searchString}" />
                            <span style="padding-left:5px"><apex:commandButton id="btnGo" value="{!$Label.Go}" action="{!Search}" rerender="searchResults"></apex:commandButton></span>
                            <!--  <input type="button" value="New" onclick="loadContact()" class="btn"/> -->
                        </apex:outputPanel>
                        
                        <apex:outputPanel id="pnlSearchResults" style="margin:10px;height:350px;overflow-Y:auto;" layout="block">
                            <apex:pageBlock id="searchResults"> 
                                <apex:pageBlockTable value="{!results}" var="a" id="tblResults">
                                    <apex:column >
                                        <apex:facet name="header">
                                            <apex:outputPanel >Account</apex:outputPanel>
                                        </apex:facet>
                                        <a href="#" onClick="javascript:top.window.opener.getBillToAddress('{!a.Id}');window.close();" rendered="{!NOT(ISNULL(a.Id))}">{!a.Name}</a>  <!--javascript:top.window.opener.lookupPick2('{!FormTag}','{!TextBox}_lkid','{!TextBox}','{!a.Id}','{!a.name}', false)-->   
                                    </apex:column>
                                    <apex:column >
                                        <apex:facet name="header">
                                            <apex:outputPanel >Address Line 1</apex:outputPanel>
                                        </apex:facet>
                                        <apex:outputText value="{!a.Address_Line1__c}"/>     
                                    </apex:column>
                                    <apex:column >
                                        <apex:facet name="header">
                                            <apex:outputPanel >Address Line 2</apex:outputPanel>
                                        </apex:facet>
                                        <apex:outputText value="{!a.Address_Line2__c}"/>     
                                    </apex:column>
                                    <apex:column >
                                        <apex:facet name="header">
                                            <apex:outputPanel >City</apex:outputPanel>
                                        </apex:facet>
                                        <apex:outputText value="{!a.City__c}"/>     
                                    </apex:column>
                                    <apex:column >
                                        <apex:facet name="header">
                                            <apex:outputPanel >Country</apex:outputPanel>
                                        </apex:facet>
                                        <apex:outputText value="{!a.Country__c}"/>     
                                    </apex:column>
                                     <apex:column >
                                        <apex:facet name="header">
                                            <apex:outputPanel >Bill To</apex:outputPanel>
                                        </apex:facet>
                                        <apex:outputText value="{!a.Bill_To__c}"/>     
                                    </apex:column>
                                     <apex:column >
                                        <apex:facet name="header">
                                            <apex:outputPanel >Ship To</apex:outputPanel>
                                        </apex:facet>
                                        <apex:outputText value="{!a.Ship_To__c}"/>     
                                    </apex:column>
                                     <apex:column >
                                        <apex:facet name="header">
                                            <apex:outputPanel >Site Name</apex:outputPanel>
                                        </apex:facet>
                                        <apex:outputText value="{!a.Site_Name__c}"/>     
                                    </apex:column>
                                     <apex:column >
                                        <apex:facet name="header">
                                            <apex:outputPanel >Enterprise Address Number</apex:outputPanel>
                                        </apex:facet>
                                        <apex:outputText value="{!a.Enterprise_Address_Number__c}"/>     
                                    </apex:column>
                                </apex:pageBlockTable>
                            </apex:pageBlock>
                        </apex:outputPanel>
                    </apex:actionRegion>
                    
                </apex:tab>
                
            </apex:tabPanel>
        </apex:outputPanel>
    </apex:form>
</apex:page>